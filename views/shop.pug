extends ./layouts/main-layout.pug

block content
      main
        if prods.length > 0
          .grid
            each product in prods
              article.card.product-item
                header.card__header
                  h1.product__title #{product.title}
                .card__image
                  img(src="https://images.unsplash.com/photo-1544947950-fa07a98d237f?q=80&w=687&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="A Book")
                .card__content
                  h2.product__price $19.99
                  p.product__description A very interesting book about so many even more interesting things!
                .card__actions
                  button.btn Add to Cart
        else 
          h1 No product
